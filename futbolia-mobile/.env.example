# ===========================================
# GoalMind Mobile - Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values:
#   cp .env.example .env

# -------------------------------------------
# üåê API BACKEND
# -------------------------------------------
# Backend server URL
# For physical devices, use your local IP: http://192.168.x.x:8000/api/v1
EXPO_PUBLIC_API_URL=http://localhost:8000/api/v1

# Request timeout in milliseconds
EXPO_PUBLIC_API_TIMEOUT=30000

# -------------------------------------------
# üîê AUTHENTICATION
# -------------------------------------------
# Key for encrypting local AsyncStorage data (optional)
EXPO_PUBLIC_STORAGE_ENCRYPTION_KEY=change_this_to_a_random_string

# -------------------------------------------
# üåç INTERNATIONALIZATION
# -------------------------------------------
# Default language: es, en
EXPO_PUBLIC_DEFAULT_LANGUAGE=es

# -------------------------------------------
# üé® THEME
# -------------------------------------------
# Default theme: light, dark, system
EXPO_PUBLIC_DEFAULT_THEME=dark

# -------------------------------------------
# üì± EXPO / EAS
# -------------------------------------------
# App slug
EXPO_PUBLIC_APP_SLUG=goalmind

# -------------------------------------------
# üèÜ FEATURE FLAGS
# -------------------------------------------
# Enable debug mode
EXPO_PUBLIC_DEBUG_MODE=true

# Show mock data when no connection
EXPO_PUBLIC_ENABLE_MOCK_DATA=true

# Enable animations
EXPO_PUBLIC_ENABLE_ANIMATIONS=true

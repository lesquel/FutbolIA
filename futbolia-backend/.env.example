# ===========================================
# GoalMind Backend - Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values:
#   cp .env.example .env

# -------------------------------------------
# üîê SECURITY - JWT Authentication
# -------------------------------------------
# Secret key for signing JWT tokens (generate a secure one)
# Generate with: openssl rand -hex 32
# NOTE: Optional in development (auto-generated), REQUIRED in production
JWT_SECRET_KEY=

# JWT algorithm
JWT_ALGORITHM=HS256

# Token expiration in minutes (default: 7 days)
JWT_EXPIRATION_MINUTES=10080

# -------------------------------------------
# üóÑÔ∏è DATABASE - MongoDB
# -------------------------------------------
# MongoDB connection URI
# Local: mongodb://localhost:27017
# Atlas: mongodb+srv://user:password@cluster.mongodb.net
MONGODB_URI=mongodb://localhost:27017

# Database name
MONGODB_DATABASE=goalmind

# -------------------------------------------
# üß† VECTOR DATABASE - ChromaDB
# -------------------------------------------
# Path for ChromaDB data storage
CHROMADB_PATH=./data/chromadb

# Player collection name
CHROMADB_COLLECTION=player_attributes

# -------------------------------------------
# ü§ñ AI - DeepSeek (Dixie)
# -------------------------------------------
# DeepSeek API Key for the AI model
# Get yours at: https://platform.deepseek.com/
DEEPSEEK_API_KEY=

# DeepSeek API base URL
DEEPSEEK_BASE_URL=https://api.deepseek.com

# Model to use
DEEPSEEK_MODEL=deepseek-chat

# Model temperature (0.0 - 2.0, lower = more deterministic)
DEEPSEEK_TEMPERATURE=0.7

# Max tokens in response
DEEPSEEK_MAX_TOKENS=2000

# -------------------------------------------
# ‚öΩ EXTERNAL API - Football-Data.org (FREE)
# -------------------------------------------
# API Key for live match data
# Register for FREE at: https://www.football-data.org/client/register
# Limit: 10 requests per minute (sufficient for the project)
FOOTBALL_DATA_API_KEY=

# -------------------------------------------
# üåê SERVER - FastAPI
# -------------------------------------------
# Environment: development, staging, production
ENVIRONMENT=development

# Server port
PORT=8000

# Server host
HOST=0.0.0.0

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# -------------------------------------------
# üîí CORS - Cross-Origin Resource Sharing
# -------------------------------------------
# Allowed origins (comma-separated)
# Development: http://localhost:8081,http://localhost:19006
# Production: https://yourdomain.com
# Leave empty for defaults (localhost variants in dev)
CORS_ORIGINS=

# -------------------------------------------
# üîë RATE LIMITING
# -------------------------------------------
# Max requests per minute per IP
RATE_LIMIT_PER_MINUTE=60

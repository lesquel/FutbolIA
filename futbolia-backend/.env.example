# ===========================================
# FutbolIA Backend - Environment Variables
# Copy to .env and fill in your values
# ===========================================

# ------------- Server Configuration -------------
ENVIRONMENT=development
# Options: development, production

HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR

# ------------- MongoDB -------------
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=futbolia

# ------------- ChromaDB -------------
CHROMADB_PATH=./data/chromadb
CHROMADB_COLLECTION=player_attributes

# ------------- DeepSeek API (Dixie AI) -------------
# Get your API key at: https://platform.deepseek.com
DEEPSEEK_API_KEY=your-deepseek-api-key-here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_TEMPERATURE=0.7
DEEPSEEK_MAX_TOKENS=2000

# ------------- Football-Data.org API (Optional) -------------
# Get your free API key at: https://www.football-data.org/client/register
FOOTBALL_DATA_API_KEY=

# ------------- JWT Authentication -------------
# IMPORTANT: Change this in production!
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=10080
# 10080 = 7 days

# ------------- Rate Limiting -------------
RATE_LIMIT_PER_MINUTE=60

# ------------- CORS -------------
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8081,http://localhost:19006,exp://localhost:8081

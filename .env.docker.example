# ===========================================
# GoalMind - Docker Environment Configuration
# ===========================================
# Copy this file to .env in the root directory for Docker Compose:
#   cp .env.docker.example .env

# -------------------------------------------
# Backend
# -------------------------------------------
ENVIRONMENT=production
BACKEND_PORT=8000

# REQUIRED: Generate with: openssl rand -hex 32
JWT_SECRET_KEY=

# Optional: AI and football data API keys
DEEPSEEK_API_KEY=
FOOTBALL_DATA_API_KEY=

# -------------------------------------------
# Frontend
# -------------------------------------------
FRONTEND_PORT=3000
EXPO_PUBLIC_API_URL=http://localhost:8000/api/v1

# -------------------------------------------
# MongoDB
# -------------------------------------------
MONGODB_PORT=27017
MONGODB_DATABASE=goalmind

# -------------------------------------------
# Defaults (usually no need to change)
# -------------------------------------------
LOG_LEVEL=INFO
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=10080
RATE_LIMIT_PER_MINUTE=60
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat
CHROMADB_COLLECTION=player_attributes
CORS_ORIGINS=http://localhost:3000,http://localhost:8081

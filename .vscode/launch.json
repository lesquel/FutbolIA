{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend: FastAPI (Debug)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "src.main:app",
        "--reload",
        "--host", "0.0.0.0",
        "--port", "8000"
      ],
      "cwd": "${workspaceFolder}/futbolia-backend",
      "envFile": "${workspaceFolder}/futbolia-backend/.env",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Backend: pytest (Debug)",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["tests/", "-v", "--tb=short"],
      "cwd": "${workspaceFolder}/futbolia-backend",
      "envFile": "${workspaceFolder}/futbolia-backend/.env",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Backend: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "cwd": "${workspaceFolder}/futbolia-backend",
      "envFile": "${workspaceFolder}/futbolia-backend/.env",
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ],
  "compounds": [
    {
      "name": "Full Stack: Backend + Frontend",
      "configurations": ["Backend: FastAPI (Debug)"],
      "preLaunchTask": "Dev: Frontend",
      "stopAll": true
    }
  ]
}
